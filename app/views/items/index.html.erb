

<%= form_for(@item, url: items_path, authenticity_token: true,  html: { id: "item-show-form" }) do |f| %>
  <div class="item_container">
    <span>
      <%= image_tag @item.image class: "img-responsive img-settings"%>
    </span>
    <div class="form-group">
      <h4><%= f.label :title_field, @item.name %> </h4>
    </div>

    <div class="form-group">
      <h4> <%= f.label :text_field, @item.description %> </h4>
    </div>

    <div class="form-group">
      <h4> Price: <%= f.label :text_field, @item.price %> </h4>
      <%= f.text_field :price, id: "price_field", class: 'form-control' %>
    </div>

    <div class="form-group">
      Quantity: <h6> <%= f.label :text_field, @item.quantity%> </h6>
      <%= f.text_field :quantity, id: "quantity_field", class: 'form-control' %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Buy Now", class: "btn btn-success btn-lg" %>
    </div>
  </div>
<% end %>
