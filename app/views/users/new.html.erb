<div class="form">
  <%= form_for(@user, url: users_path, html: { id: "user-create-form" }) do |f| %>
    <h1 class="text-center">
      Register New Account
    </h1>

    <div class="form-group">
      <h4> <%= f.label :username_field, "Username:" %> </h4>
      <%= f.text_field :username, required: true, id: "user_username_field", class: 'form-control' %>
    </div>

    <div class="form-group">
      <h4> <%= f.label :text_field, "Password:" %> </h4>
      <%= f.password_field :password, id: "user_password__field", class: 'form-control' %>
    </div>

    <div class="form-group">
      <h4> <%= f.label :text_field, "Email:" %> </h4>
      <%= f.text_field :email, id: "user_email_field", class: 'form-control' %>
    </div>

    <div class="form-group">
      <h4><%= f.label "Post Image:" %></h4>
      <div id="preview-image">
        <% if @user.image? %>
          <%= image_tag @user.image, class: "img-settings img-responsive center-block" %>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.file_field :image, id: "user_image_field", class: 'form-control image-uploader' %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Register", class: "btn btn-primary btn-lg" %>
    </div>

    <div class="form-group text-center">
      <%= link_to "/auth/facebook", class: "btn btn-primary btn-lg fb-btn", id: "sign_in" do %>
        <i class="fa fa-facebook-square" aria-hidden="true"></i>
        <h4>Sign-up with Facebook</h4>
      <% end %>
    </div>
  <% end %>
</div>
