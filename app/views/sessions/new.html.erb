<div class="form">
  <%= form_for(:user, url: sessions_path, html: { id: "user-create-form" }) do |f| %>
    <h1 class="text-center">
      Log In
    </h1>

    <div class="form-group">
      <h4> <%= f.label :text_field, "Email:" %> </h4>
      <%= f.text_field :email, required: true, id: "user_email_field", class: 'form-control' %>
    </div>

    <div class="form-group">
      <h4> <%= f.label :text_field, "Password:" %> </h4>
      <%= f.password_field :password, required: true, id: "user_password_field", class: 'form-control' %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
    </div>

    <div class="form-group text-center">
      <%= link_to "/auth/facebook", class: "btn btn-primary btn-lg fb-btn", id: "sign_in" do %>
        <i class="fa fa-facebook-square" aria-hidden="true"></i>
        <h4>Log-in with Facebook</h4>
      <% end %>
    </div>
  <% end %>
</div>
