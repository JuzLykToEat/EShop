<div class="landing">
  <div class="background">
    <div class="landing-container">
      <div id="best-seller-carousel" class="carousel slide" data-ride="carousel" data-interval="3500">
        <h1 class="carousel-title text-center">Best Seller!</h1>
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#best-seller-carousel" data-slide-to="0" class="active"></li>
          <li data-target="#best-seller-carousel" data-slide-to="1"></li>
          <li data-target="#best-seller-carousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <% @items.each do |item| %>
            <% if item == @items.first %>
              <div class="item active">
                <%= image_tag item.image, class: "img-settings img-responsive center-block" %>
                <div class="carousel-caption">
                  <h3><%= item.name %></h3>
                  <p><%= item.description %></p>
                </div>
              </div>
            <% else %>
              <div class="item">
                <%= image_tag item.image, class: "img-settings img-responsive" %>
                <div class="carousel-caption">
                  <h3><%= item.name %></h3>
                  <p><%= item.description %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#best-seller-carousel" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#best-seller-carousel" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

      <div class="right-container">
        <div class="search-box">
          <h1 class="title text-center"> Search for your soul:</h1>
          <hr class="Line">
          <%= form_tag("/items", method: "get", class: "search-bar text-center") do %>
          <%= text_field_tag(:search) %>
          <%= submit_tag("Search") %>
          <% end %>
        </div>

        <div id="newest-item-carousel" class="carousel slide" data-ride="carousel" data-interval="4500">
          <h1 class="carousel-title text-center">Newest Addition</h1>
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#newest-item-carousel" data-slide-to="0" class="active"></li>
            <li data-target="#newest-item-carousel" data-slide-to="1"></li>
            <li data-target="#newest-item-carousel" data-slide-to="2"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <% @items.each do |item| %>
              <% if item == @items.first %>
                <div class="item active">
                  <%= image_tag item.image, class: "img-settings img-responsive center-block" %>
                  <div class="carousel-caption">
                    <h3><%= item.name %></h3>
                    <p><%= item.description %></p>
                  </div>
                </div>
              <% else %>
                <div class="item">
                  <%= image_tag item.image, class: "img-settings img-responsive" %>
                  <div class="carousel-caption">
                    <h3><%= item.name %></h3>
                    <p><%= item.description %></p>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>

          <!-- Controls -->
          <a class="left carousel-control" href="#newest-item-carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#newest-item-carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
