<div class="modal fade" id="log-in">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <div class="form">
            <%= form_for(:user, url: sessions_path, html: { id: "user-create-form" }) do |f| %>
              <h1 class="text-center">
                Log In
              </h1>

              <div class="form-group">
                <h4> <%= f.label :text_field, "Email:" %> </h4>
                <%= f.text_field :email, required: true, id: "user_email_field", class: 'form-control' %>
              </div>

              <div class="form-group">
                <h4> <%= f.label :text_field, "Password:" %> </h4>
                <%= f.password_field :password, required: true, id: "user_password_field", class: 'form-control' %>
              </div>

              <div class="form-group text-center">
                <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
              </div>

              <div class="form-group text-center">
                <%= link_to "/auth/facebook", class: "btn  btn-lg fb-btn", id: "sign_in" do %>
                  <h4><%=fa_icon("facebook-square")%>Login with Facebook</h4>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
